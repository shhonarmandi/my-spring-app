#!/usr/bin/env bash
set -euo pipefail
export JAVA_HOME=$(/usr/libexec/java_home -v 21)
export PATH="$JAVA_HOME/bin:$PATH"

echo "→ Running Spotless apply…"
mvn -q -DskipTests spotless:apply

# re-stage any changes Spotless made
git add -A

echo "→ Verifying formatting…"
mvn -q -DskipTests spotless:check